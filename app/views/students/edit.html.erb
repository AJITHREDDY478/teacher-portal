<% content_for :title, "Edit Student" %>
<% content_for :heading, "Edit Student" %>
<h1 class="text-3xl font-bold mb-6 text-center"><%= yield(:heading) %></h1>

<%= form_with(model: @student, local: true, class: "max-w-lg mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
  <% if @student.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-semibold"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>
      <ul class="mt-2">
        <% @student.errors.full_messages.each do |message| %>
          <li class="ml-4 list-disc"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :subject_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :subject_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :marks, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :marks, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between space-x-2">
    <%= form.submit "Save Changes", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to 'Cancel', students_path, class: "text-blue-500 hover:text-blue-700" %>
    <!-- <#%= link_to 'Back', students_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %> -->
  </div>
<% end %>
